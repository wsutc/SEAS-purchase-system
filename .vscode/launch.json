{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Django",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}\\manage.py",
      "args": [
        "runserver",
        "8001",
      ],
      "django": true,
      "justMyCode": true
    },
    {
      "name": "Python: Django: Test",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}\\manage.py",
      "args": [
        "test"
      ],
      "django": true,
      "justMyCode": true
    },
    {
      "name": "Python: Django - allcode",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}\\manage.py",
      "args": [
        "runserver"
      ],
      "django": true,
      "justMyCode": false
    },
    {
      "name": "Python: Django: Test",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}\\manage.py",
      "args": [
        "test"
      ],
      "django": true,
      "justMyCode": false
    },
    {
      "name": "Django: Migration",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}\\manage.py",
      "args": [
        "${input:migrationCommand}",
      ],
      "django": true,
      "justMyCode": true
    },
    {
      "name": "Django: Custom",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}\\manage.py",
      "args": [
        "${input:customCommand}",
        "${input:commandArg}",
      ],
      "django": true,
      "justMyCode": true
    }
  ],
  "inputs": [
    {
      "type": "pickString",
      "id": "customCommand",
      "description": "Choose a command",
      "options": [
        "print_sales_tax_values",
        "makemigrations",
        "migrate",
        "fix_orphan_columns",
        "csv_imports",
      ],
      "default": "makemigrations",
    },
    {
      "id": "commandArg",
      "type": "promptString",
      "description": "Enter arg",
      "default": "--fake",
    },
    {
      "id": "migrationCommand",
      "type": "pickString",
      "description": "Choose Migration Command",
      "options": [
        "makemigrations",
        "migrate",
      ],
      "default": "makemigrations",
    }
  ]
}
